{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome (AI Antonio's Intelligence)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5501/index.html",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ]
        },
        {
            "name": "Launch Edge (AI Antonio's Intelligence)",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:5501/index.html",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/edge-debug-profile"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
        },
        {
            "name": "Launch Firefox (AI Antonio's Intelligence)",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:5501/index.html",
            "webRoot": "${workspaceFolder}",
            "reAttach": true,
            "pathMappings": [
                {
                    "url": "http://localhost:5501",
                    "path": "${workspaceFolder}"
                }
            ]
        }
    ]
}